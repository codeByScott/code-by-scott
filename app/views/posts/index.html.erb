<!-- Index Layout -->
<div class="container">
  <h1>My Latest Posts</h1>

  <% @posts.each do |post| %>
    <div class="row">
      <div class="col s12">
        <div class="card">
          <div class="card-content">
            <h2 class="card-title"><%= post.title %></h2>
            <p><%= post.body %></p>
          </div>
          <div class="card-action">
            <%= link_to 'Read more', post %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
