  <h1>My Latest Posts</h1>


  <div class="row">
    <% @posts.each do |post| %>
      <div class="col s12 m6">
        <div class="card">
          <div class="card-content">
            <h2 class="card-title">
              <%= link_to truncate(post.title, length: 50), post_path(post) %>
            </h2>
            <time datetime="<%= post.created_at %>" class="card-date"><%= post.created_at.strftime("%b %d, %Y") %></time>
            <p><%= truncate(post.body, length: 250, separator: " ") %></p>
          </div>
          <div class="card-action">
            <%= link_to 'Read more', post %>
          </div>
        </div>
      </div>
    <% end %>
  </div>



